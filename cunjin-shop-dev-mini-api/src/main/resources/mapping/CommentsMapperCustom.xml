<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yeykai.mapper.CommentsMapperCustom" >
  <resultMap id="BaseResultMap" type="com.yeykai.pojo.vo.CommentsVO" >
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="goods_id" property="goodsId" jdbcType="VARCHAR" />
    <result column="from_user_id" property="fromUserId" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="comment" property="comment" jdbcType="LONGVARCHAR" />
    <result column="avatar_url" property="avatar_url" jdbcType="VARCHAR" />
    <result column="nickname" property="nickname" jdbcType="VARCHAR" />
    <result column="toNickname" property="toNickname" jdbcType="VARCHAR" />
  </resultMap>
  
    <select id="queryComments" resultMap="BaseResultMap" parameterType="String">
		select c.*,u.avatar_url as avatar_url,u.nickname,tu.nickname as toNickname 
		from comments c 
		left join users u on c.from_user_id = u.openid
		left join users tu on c.to_user_id = tu.openid
	  	where c.goods_id = #{goodsId} order by c.create_time desc
  	</select>
</mapper>